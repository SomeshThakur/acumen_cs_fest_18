<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.saiprasadgarimella.navigation.chat"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fui_transparent"
        >


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/faf"
            android:background="#e0e0e0"
            android:clipToPadding="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:fitsSystemWindows="true"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/majorRelativeLayout"
            android:id="@+id/faf"
            android:background="@color/fui_transparent">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/fui_transparent"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/fui_transparent">


                <Button
                    android:id="@+id/scrollEventBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_addtask"
                    android:layout_margin="3dp"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite"
                    android:text="Events" />

                <Button
                    android:id="@+id/scrollSponsorsBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_addtask"
                    android:layout_margin="3dp"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite"
                    android:text="Sponsors"/>

                <Button
                    android:id="@+id/scrollContactBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_addtask"
                    android:layout_margin="3dp"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite"
                    android:text="Contact us"/>


                <Button
                    android:id="@+id/scrollDevelopersBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_addtask"
                    android:layout_margin="3dp"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite"
                    android:text="Developers"/>



                <Button
                    android:id="@+id/scrollAboutBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_addtask"
                    android:layout_margin="3dp"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite"
                    android:text="About"/>


                <Button
                    android:id="@+id/scrollNavigationBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_addtask"
                    android:layout_margin="3dp"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite"
                    android:text="Navigation"/>

                <Button
                    android:id="@+id/scrollDateBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/back_addtask"
                    android:layout_margin="3dp"
                    android:padding="5dp"
                    android:textColor="@color/colorWhite"
                    android:text="Date"/>
            </LinearLayout>

        </HorizontalScrollView>

        </RelativeLayout>>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/majorRelativeLayout">




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="20dp"
                android:elevation="2dp"
                android:padding="2dp"
                android:background="@drawable/back_type_a_msg"
                android:layout_toStartOf="@+id/addBtn"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/addBtn">
                <EditText
                    android:id="@+id/message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="50dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:background="#fff"
                    android:hint="Type a Message"
                    android:textSize="18sp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addBtn"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/back_fab"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="5dp"
                android:elevation="4dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp">
                <ImageView
                    android:id="@+id/fab_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/ic_mic_black_24dp"
                    android:tint="#fff"/>
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>
